<% if has_user_authentication_provider? %>
    <% if current_user %>
    <menu-bar type="main-menu" :menu-items="[
        {name: 'Your Account', component: 'Account', href: '/account/', children: [
          {name: '<%= t('blacklight.header_links.logout')%>',
            component: '<%= t('blacklight.header_links.logout')%>',
            href: '<%= main_app.destroy_user_session_path %>',
            method: 'delete',
            authenticity_token: '<%= form_authenticity_token %>'},
          {name: 'Bookmarks', component: 'Bookmarks', href: '/bookmarks/'},
          {name: '<%= t('blacklight.header_links.search_history')%>', component: 'History', href: '<%= blacklight.search_history_path %>'},
        ]}
      ]"
    ></menu-bar>
    <% else %>
    <menu-bar type="main-menu" :menu-items="[
        {name: 'Your Account', component: 'Account', href: '/account/', children: [
          {name: '<%= t('blacklight.header_links.login')%>',
            component: '<%= t('blacklight.header_links.login')%>',
            href: '<%= new_user_session_path %>'},
          {name: 'Bookmarks', component: 'Bookmarks', href: '/bookmarks/'},
          {name: '<%= t('blacklight.header_links.search_history')%>', component: 'History', href: '<%= blacklight.search_history_path %>'},
        ]}
      ]"
    ></menu-bar>
    <% end %>
<% end %>
