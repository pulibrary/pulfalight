<div class="overview", data-component-id="<%= document.refs.first %>">
  <div class="lux document-title">
    <h2><%= document.normalized_title %></h2>
    <div class="document-attributes">
      <% if document.extent.present? %>
        <div class="document-extent">
          <span><%= document.extent %></span>
        </div>
      <% end %>
      <%= OnlineContentBadge.new(document).render %>
      <%= render partial: "restricted_badge", locals: { document: document } %>
    </div>
  </div>
  <%= render "shared/viewer" %>
  <%= render(partial: 'show_upper_metadata_default') %>
  <%= render(partial: "show_child_table") %>
</div>
