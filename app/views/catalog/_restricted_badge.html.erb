    <% if document.restricted? %>
      <div class="document-access restricted">
        <span class="media-body al-restricted-icon" aria-hidden="true"><%= blacklight_icon :"icon-restricted" %></span> Restricted Content
      </div>
    <% elsif document.review? %>
      <div class="document-access review">
        <span class="media-body al-review-icon" aria-hidden="true"><%= blacklight_icon :"icon-review" %></span>Restrictions may apply. See Access Note.
      </div>
    <% end %>
